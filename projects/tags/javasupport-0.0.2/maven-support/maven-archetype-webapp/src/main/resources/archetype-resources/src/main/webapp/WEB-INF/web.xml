    <description>${groupId} ${artifactId}</description>
    <display-name>${groupId} ${artifactId}</display-name>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Servlet Mapping -->
    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>${groupId}.WelcomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    
